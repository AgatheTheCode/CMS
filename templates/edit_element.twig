{% extends 'base.twig' %}

{% block page %}
	<h6>Modifier un auteur</h6>
	<form action="index.php?page=auteur&action=update" method="post">
		<input type="texte" readonly name="id" value="{{ auteur.id }}">
		<input type="text" name="nom" placeholder="Saisir un nom" value="{{ auteur.nom }}">
		<input type="text" name="prenom" placeholder="Saisir un prénom" value="{{ auteur.prenom }}">
		<input type="submit" value="Créer">
	</form>
{% endblock %}